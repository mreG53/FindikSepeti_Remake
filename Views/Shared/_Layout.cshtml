<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FindikSepeti_Remake</title>
    <link href="~/css/font/css/all.css" rel="stylesheet" />
    <link href="~/css/font/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="text-white arkaplan">
    <div class="justify-center items-center flex">
        <header class="text-lime-900  fixed z-50 bg-white rounded-3xl navbar lg:w-5/6 w-3/4">
            <nav class="flex items-center justify-between p-3 lg:px-8" aria-label="Global">
                <div class="hidden lg:flex lg:flex-1 items-center lg:gap-x-6">
                    <a asp-controller="Home" asp-action="Index" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">Mağaza</a>
                    <a asp-controller="Home" asp-action="Index" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">Alım Satım</a>
                </div>
                <div class="lg:flex lg:gap-x-12">
                    <a asp-controller="Home" asp-action="Index" class="-m-1.5 p-1.5 flex items-center">
                        <img class="h-9 w-auto" src="~/images/logo_test.png" alt=""><span class="pl-2 text-lg hover:text-lime-700">Fındık Sepeti</span>
					</a>
                </div>
                <div class="ml-4 flex lg:hidden">
                    <button type="button"
                            class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 hover:text-gray-900 txtOpa" id="menuButton">
                        <span class="sr-only">Open main menu</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                    </button>
                </div>
                <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-6">
                    <a asp-controller="Home" asp-action="About" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">Hakkımızda</a>
                    <a asp-controller="Home" asp-action="Contact" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">İletişim</a>
                    <a asp-controller="Home" asp-action="Index" class="text-lg font-semibold leading-6 hover:text-lime-700 txtOpa">
                        <i class="fa-solid fa-user"></i>
                    </a>
                </div>
            </nav>
            <!-- Mobile menu, show/hide based on menu open state. -->
            <div class="lg:hidden rounded-lg" id="mobileMenu" style="display: none;">
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">
                    Ana
                    Sayfa
                </a>
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">Mağaza</a>
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">Alım Satım</a>
                <a asp-controller="Home" asp-action="About"
                   class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">Hakkımızda</a>
                <a asp-controller="Home" asp-action="Contact" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">İletişim</a>
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">
                    <i class="fa-solid fa-user"></i>
                </a>
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-lg font-semibold leading-6 text-lime-900 hover:bg-lime-100">
                    <i class="fa-solid fa-cart-shopping"></i>
                </a>
            </div>
        </header>
    </div>

    <div id="arkaplan">
		<main role="main" class="pb-3 other-content">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
